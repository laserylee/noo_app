<header class="navbar navbar-dark navbar-expand bg-dark flex-column flex-md-row sticky-top">
  <%= link_to image_tag("noo.png", alt:"Noo logo", size:"30x30", class:"rounded logo"),root_url, class:"navbar-brand logo-button rounded" %>
  <div class="d-flex flex-row">
    <div>
    <ul class="navbar-nav">
      <li class="nav-item rounded <%= activeProvide(root_path)   %>"><%= link_to "Home",    root_path,    class:"nav-link"%></li>
      <li class="nav-item rounded <%= activeProvide(help_path)   %>"><%= link_to "Help",    help_path,    class:"nav-link"%></li>
      <li class="nav-item rounded <%= activeProvide(about_path)  %>"><%= link_to "About",   about_path,   class:"nav-link"%></li>
      <li class="nav-item rounded <%= activeProvide(mission_path)%>"><%= link_to "Mission", mission_path, class:"nav-link"%></li>
    </ul>
    </div>
    <div>
    <ul class="navbar-nav">
    <% if logged_in? %>
    <li class="dropdown nav-item rounded">
      <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">Account<b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "Settings", "#" %></li>
        <li class="divider"></li>
        <li><%= link_to "Log out", logout_path, method: :delete %></li>
      </li>
     <% else %>
       <li class="nav-item rounded <%= activeProvide(login_path)%>"><%= link_to "Log in", login_path, class:"nav-link" %></li>
     </ul>
    </div>
     <% end %>
  </div>
</header>
